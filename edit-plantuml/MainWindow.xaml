<Window x:Class="Amg.EditPlantuml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantumlEditor"
        mc:Ignorable="d"
        Title="PlantUml Editor" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Source" Grid.Column="0" Grid.Row="0" TextChanged="Source_TextChanged"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 FontFamily="Courier New"
                 AcceptsTab="False" 
                 />
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
        <Image x:Name="Preview" 
               Grid.Column="2" 
               Grid.Row="0"
               Stretch="None" MouseMove="Preview_MouseMove" DragEnter="Preview_DragEnter" Drop="Preview_Drop" DragOver="Preview_DragOver"
               AllowDrop="True"
               />
    </Grid>
</Window>
